<Window x:Class="FaceTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="960">
    <Grid x:Name="BackPanel">
        <DockPanel DockPanel.Dock="Bottom">
            <Button x:Name="BrowseButton" Width="72" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                    Content="Browse..."
                    Click="BrowseButton_Click" />
            <TextBox x:Name="Name" Height="20" Width="60" AcceptsReturn="True" Text="Name" />
            <TextBox x:Name="Title" Height="20" Width="60" AcceptsReturn="True" Text="Title" />
            <TextBox x:Name="Company" Height="20" Width="60" AcceptsReturn="True" Text="Company" />
            <TextBox x:Name="NumConnections" Height="20" Width="60" AcceptsReturn="True" />
            <Button x:Name="Store" Width="72" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                    Content="Store" Click="storeInPersonGroup"/>
            <Button x:Name="Test" Width="72" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Find Profile" Click="testWithFaceAPI"/>
            <StatusBar VerticalAlignment="Bottom">
                <StatusBarItem>
                    <TextBlock Name="faceDescriptionStatusBar" />
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>